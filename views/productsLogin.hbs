<style>
    /* Success message container */
    .alert-container {
        position: fixed;
        top: 10px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 100;
        padding: 10px;
        background-color: #28a745;
        /* Green for success */
        color: white;
        border-radius: 5px;
        display: none;
    }

    .alert-container .alert {
        margin: 0;
        font-size: 16px;
    }

    /* Flying effect */
    .flying {
        animation: flyToCart 1s ease-in-out forwards;
        position: absolute;
        z-index: 10;
    }

    @keyframes flyToCart {
        0% {
            transform: translate(0, 0);
            opacity: 1;
        }

        100% {
            transform: translate(350px, -100px);
            /* Final cart position */
            opacity: 0;
        }
    }
</style>

