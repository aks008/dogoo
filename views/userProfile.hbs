
    <style>
        .profile-image {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            cursor: pointer;
        }

        #imageInput {
            display: none;
        }

        .form-control {
            margin-bottom: 10px;
        }

        .default-address {
            font-weight: bold;
            color: green;
        }
    </style>



    <header class="bg-light p-3 mb-4">
        <div class="container">
            <h1 class="text-center">User Profile</h1>
        </div>
    </header>

    <main class="container my-5">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="row">
                    <!-- Profile Image and Upload -->
                    <div class="col-md-3 text-center">
                        {{#if profile.attachment.path}}
                            <img src="{{profile.attachment.path}}" alt="User Avatar" id="profileImage" class="profile-image">
                        {{else}}
                            <img src="/image/blank-profile-picture.png" alt="User Avatar" id="profileImage" class="profile-image" onerror="this.onerror=null;this.src='/images/blank-profile-picture.png';">
                        {{/if}}
                        <input type="file" id="imageInput" accept="image/*">
                        <h5 class="mt-3" id="userName">{{profile.firstName}} {{profile.lastName}}</h5>
						<button class="btn btn-sm btn-outline-primary mt-1" onclick="document.getElementById('imageInput').click()">Change Image</button>

                    </div>

                    <!-- Profile Information -->
                    <div class="col-md-9">
                        <h4>Personal Information</h4>
                        <hr>
                        <!-- Email Verification -->
                        <p>
                            <strong>Email:</strong> {{profile.email}}
                            <span id="emailVerificationStatus" class="ms-2 text-danger">{{profile.isVerifiedStatus}}</span>
                            <button id="verifyEmailBtn" class="btn btn-sm btn-outline-primary ms-3">Verify Email</button>
                        </p>
                        <!-- Gender -->
                        <div>
                            <label for="gender"><strong>Gender:</strong> {{profile.gender}}</label>
                        </div>
                        <!-- Birthdate -->
                        <div>
                            <label for="birthdate"><strong>Birthdate:</strong> {{profile.birthdate}} </label>
                        </div>
                        <!-- Address Management -->
                        <div>
                        {{#if profile.address}}
                            <label for="address"><strong>Address: </strong>( Set as a default )</label>
                        {{/if}}
                      {{!-- {{#each profile.address}}
                       <div class="radio-container">
                            <input type="radio" id="defaultOptionYes" name="setDefault" value={{_id}}> &nbsp;
                            <label for="defaultOptionYes" data-id={{_id}}>  {{line1}}, {{line2}}, {{city}}, {{state}}, {{zip}}, {{country}}</p></label>
                        </div>
                      {{/each}} --}}
                        </div>
                        <!-- Save Changes -->
                        <button id="saveBtn" class="btn btn-primary mt-3">Save Changes</button>
                        <p id="defaultAddressStatus" class="mt-2"></p>
                    </div>
                </div>
            </div>
        </div>
    </main>


    <!-- Custom Script -->
    <script>
    document.addEventListener('DOMContentLoaded', () => {
        const profileImage = document.getElementById('profileImage');
        const imageInput = document.getElementById('imageInput');
        const saveBtn = document.getElementById('saveBtn');
        const emailVerificationStatus = document.getElementById('emailVerificationStatus');
        const gender = document.getElementById('gender');
        const birthdate = document.getElementById('birthdate');
        const address = document.querySelectorAll('input[name="setDefault"]');
        
        let selectedAddressId = null;

        // Handle image change
        imageInput.addEventListener('change', (event) => {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = (e) => {
                    profileImage.src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });

        // Handle email verification
        document.getElementById('verifyEmailBtn').addEventListener('click', () => {
            alert("Verification email has been sent.");
            emailVerificationStatus.textContent = "Pending Verification";
        });

        // Handle save button click
        saveBtn.addEventListener('click', () => {
            // Get the selected default address
            address.forEach(option => {
                if (option.checked) {
                    selectedAddressId = option.value;
                }
            });

            const profileData = {
                defaultAddressId: selectedAddressId
            };

            const formData = new FormData();
            formData.append('image', imageInput.files[0]); // Attach the image file
            formData.append('profileData', JSON.stringify(profileData));

            const token = localStorage.getItem('token');
            // Send the data to the backend
            axios.post(`users/upload`, formData, {
                headers: {
                    'Content-Type': 'multipart/form-data',
                    'Authorization': `Bearer ${token}`
                }
            })
            .then(response => {
                console.log(response);
                alert('Profile updated successfully!');
            })
            .catch(error => {
                alert('Error updating profile');
                console.error(error);
            });
        });
    });
</script>
