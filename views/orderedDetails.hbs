<style>
  body {
    background-color: #faf3e0; /* Light pet-friendly background */
    font-family: Arial, sans-serif;
  }

  .card {
    border: 1px solid #f1e6d8;
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    margin-bottom: 20px;
    background-color: #ffffff;
  }

  .card-header {
    background: linear-gradient(145deg, #171614, #044994);
    color: white;
    text-align: center;
    font-weight: bold;
    padding: 20px;
    border-bottom: 2px solid #044994;
  }
  .status-label {
    font-weight: bold;
    padding: 5px 10px;
    border-radius: 5px;
    color: white;
  }

  .status-pending {
    background-color: #f5a623; /* Warm amber for pending */
  }

  .status-shipped {
    background-color: #48c774; /* Soft green for shipped */
  }

  .status-delivered {
    background-color: #3498db; /* Calm blue for delivered */
  }

  .status-cancelled {
    background-color: #e74c3c; /* Bold red for cancelled */
  }

  .product-image {
    width: 100px;
    height: 100px;
    object-fit: cover;
    margin-right: 15px;
    border-radius: 8px;
  }

  .product-card {
    display: flex;
    align-items: center;
    border-bottom: 1px solid #f1e6d8;
    padding: 15px 0;
  }

  .product-card:last-child {
    border-bottom: none;
  }

  .order-info,
  .product-info {
    margin-bottom: 20px;
  }

  .order-summary {
    font-size: 1.2em;
    font-weight: bold;
    color: #2d3436; /* Darker text for better readability */
  }

  .order-summary span {
    font-size: 1.5em;
    color: #f28d1a; /* Highlight total amount with the header color */
  }

  h6 {
    color: #2c3e50; /* Darker text for product names */
  }

  p {
    color: #7f8c8d; /* Soft grey for text */
  }
</style>

<body>

  <div class="container mt-5">
    <div class="row">
      <!-- Loop through each order -->
      {{#each orders}}
      <div class="col-md-12 mb-4">
        <!-- Order Card -->
        <div class="card">
          <div class="card-header">
            <h5>Order #{{orderNumber}}</h5>
          </div>
          <div class="card-body">
            <!-- Order Status -->
            <div class="mb-3">
              <label for="orderStatus" class="form-label">Status:</label>
              <span class="status-label status-{{status}}">{{status}}</span>
            </div>

            <!-- Customer Information -->
            <div class="order-info mb-3">
              <p><strong>Date:</strong> {{orderDate}}</p>
              <p><strong>Name:</strong> {{customerName}}</p>
              <p><strong>Phone:</strong>+91 {{customerPhone}}</p>

              <!-- Loop through the addresses array and display each address -->
              {{#each address}}
              <p><strong>Address:</strong> {{line1}}, {{line2}}, {{city}}, {{state}}, {{zip}}, {{country}}</p>
              {{/each}}
              <p><strong>Instructions:</strong> {{instructions}}</p>
              <p><strong>Delivery Time Slot:</strong> {{timeSlot}}</p>
              <p><strong>Payment Method:</strong> {{paymentMethod}}</p>
            </div>

            <!-- Product Information -->
            <div class="product-info">
              <h6><strong>Products:</strong></h6>
              {{#each products}}
              <div class="product-card">
                <img src="{{imageUrl}}" alt="{{name}}" class="product-image">
                <div>
                  <h6>{{name}}</h6>
                  <p><strong>Description:</strong> {{description}}</p>
                  <p><strong>Qty:</strong> {{quantity}}</p>
                  <p><strong>Price:</strong> ₹{{price}}</p>
                </div>
              </div>
              {{/each}}
            </div>

            <!-- Order Summary -->
            <div class="order-summary d-flex justify-content-between">
               <h5>Total Amount: ₹{{totalAmount}}</h5>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>

</body>
