<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Admin Panel</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    /* Sidebar styles */
    .sidebar {
      height: 100vh;
      background-color: #000;
      color: #fff;
      position: fixed;
      width: 200px;
      padding-top: 20px;
      overflow-y: auto;
      transition: transform 0.3s ease;
    }

    .sidebar .nav-link {
      color: #fff;
      font-size: 16px;
      padding: 15px;
      transition: background-color 0.3s, color 0.3s;
    }

    .sidebar .nav-link:hover,
    .sidebar .dropdown-item:hover {
      background-color: #444;
      color: #fff;
    }

    .sidebar .nav-link.active {
      background-color: #007bff;
      font-weight: bold;
    }

    .sidebar .dropdown-menu {
      background-color: #222;
      border: none;
      margin-left: 10px;
      /* Slight indentation for dropdown items */
    }

    .sidebar .dropdown-item {
      color: #fff;
      font-size: 14px;
    }

    /* Main content styles */
    .main-content {
      margin-left: 200px;
      padding: 20px;
      transition: margin-left 0.3s ease;
    }

    /* Responsive: on small screens, hide the sidebar by default */
    @media (max-width: 768px) {
      .sidebar {
        transform: translateX(-200px);
      }

      .sidebar.active {
        transform: translateX(0);
      }

      .main-content {
        margin-left: 0;
      }
    }
  </style>
</head>

<body>
  <!-- Top Navbar -->
  <nav class="navbar navbar-dark bg-dark">
    <div class="container-fluid">
      <!-- Sidebar Toggle Button for small screens -->
      <button class="btn btn-outline-secondary d-md-none" id="sidebarToggle">â˜°</button>
      <span class="navbar-brand mb-0 h1">Admin Panel</span>
    </div>
  </nav>

  <!-- Sidebar -->
  <div class="sidebar d-flex flex-column" id="sidebar">
    <nav class="nav flex-column">
      <a href="/admin/products" class="nav-link">Product List</a>
      <a href="#" class="nav-link dropdown-toggle" id="orderDropdown" data-bs-toggle="dropdown" aria-expanded="false">
        Order List
      </a>
      <ul class="dropdown-menu" aria-labelledby="orderDropdown">
        <li><a href="/admin/orders/pending" class="dropdown-item">Pending Orders</a></li>
        <li><a href="/admin/orders/confirmed" class="dropdown-item">Confirmed Orders</a></li>
        <li><a href="/admin/orders/delivered" class="dropdown-item">Delivered Orders</a></li>
        <li><a href="/admin/orders/cancelled" class="dropdown-item">Cancelled Orders</a></li>
      </ul>
      <a href="/admin/users" class="nav-link">User List</a>
      <a href="/admin/payments" class="nav-link">Payment List</a>
      <a href="/admin/logout" class="nav-link">Logout</a>
    </nav>
  </div>

  <!-- Main Content -->


  <!-- Bootstrap Bundle (with Popper) -->
  <script>
    // Toggle sidebar for small screens
    const sidebarToggle = document.getElementById('sidebarToggle');
    const sidebar = document.getElementById('sidebar');

    sidebarToggle.addEventListener('click', () => {
      sidebar.classList.toggle('active');
    });
  </script>
</body>

</html>